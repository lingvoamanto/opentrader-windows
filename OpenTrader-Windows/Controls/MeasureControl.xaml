<UserControl x:Class="OpenTrader.Controls.MeasureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenTrader.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="200"
             Height="130" Width="200"
             BorderBrush="Gray"
             BorderThickness="1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Start</Label>
        <Label Grid.Row="0" Grid.Column="1" Name="Start" Background="White">0.0000</Label>
        <Label Grid.Row="1" Grid.Column="0">Minor</Label>
        <Label Grid.Row="1" Grid.Column="1" Name="Minor" Background="White">0.0000</Label>
        <Label Grid.Row="2" Grid.Column="0">End</Label>
        <Label Grid.Row="2" Grid.Column="1" Name="End" Background="White">0.0000</Label>
        <Label Grid.Row="3" Grid.Column="0">Target</Label>
        <Label Grid.Row="3" Grid.Column="1" Name="Target" Background="White">0.0000</Label>
        <Label Grid.Row="4" Grid.Column="0">Move</Label>
        <Label Grid.Row="4" Grid.Column="1" Name="Move" Background="White">0.00%</Label>
    </Grid>
</UserControl>
