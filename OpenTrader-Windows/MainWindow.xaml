<Window x:Class="OpenTrader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenTrader"
        xmlns:data="clr-namespace:OpenTrader.Data"
        mc:Ignorable="d"
        Title="Open Trader" Height="900" Width="1200"
        Icon="OpenTrader.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Data" >
                <MenuItem Header="Read all datafiles" Click="ReadAllDataFiles_Click" />
                <MenuItem Header="Trendline Guids" Click="TrendlineGuids_Click" />
                <MenuItem Header="Upload trendlines" Click="UploadTrendlines_Click" />
                <MenuItem Header="Trade Guids" Click="TradeGuids_Click" />
                <MenuItem Header="Upload trades" Click="UploadTrades_Click" />
                <MenuItem Header="Dividend Guids" Click="DividendGuids_Click" />
                <MenuItem Header="Upload dividends" Click="UploadDividends_Click" />
                <MenuItem Header="Create annotation Guids" Click="AnnotationGuids_Click" />
                <MenuItem Header="Upload annotations" Click="UploadAnnotations_Click" />
                <MenuItem Header="Create journalEntry Guids" Click="JournalEntryGuids_Click" />
                <MenuItem Header="Upload journalEntries" Click="UploadJournalEntries_Click" />
                <MenuItem Header="Create dataSet Guids" Click="DataSetGuids_Click" />
                <MenuItem Header="Upload dataSets" Click="UploadDataSets_Click" />
                <MenuItem Header="Create CandleData Guids" Click="CandleDataGuids_Click" />
                <MenuItem Header="Upload CandleData" Click="UploadCandleData_Click" />
                <MenuItem Header="Create DataFile Guids" Click="DataFileGuids_Click" />
                <MenuItem Header="Upload DataFiles" Click="UploadDataFile_Click" />
            </MenuItem>
            <MenuItem Header="Strategy" >
                <MenuItem Header="New" Click="StrategyNew"/>
                <MenuItem Header="_Open" Click="StrategyOpen" />
                <MenuItem Header="_Save" Click="StrategySave" />
            </MenuItem>
            <MenuItem Header="Preferences" Click="Preferences_Click" />
        </Menu>
        <ToolBarTray Grid.Row="1" Height="30" Margin="0,0,0,1">
            <ToolBar>
                <Button Height="24" Name="SharesiesButton" Margin="1,0,0,0" Click="SharesiesButton_Click" ToolTip="Sharesies" >
                    <Image  Source="pack://application:,,,/OpenTrader;component/Images/Sharesies.png" />
                </Button>
                <Button Height="24" Name="NewsButton" Margin="1,0,1,0" ToolTip="News" >
                    <Image  Source="/Images/Search online.png" />
                </Button>
                <Button Height="24" Click="AnnouncementsButton_Click" Margin="1,0,1,0" ToolTip="Announcements" >
                    <Image  Source="/Images/Announcements.png" />
                </Button>
                <Button Height="24" Click="TradeButton_Click" Margin="1,0,1,0" ToolTip="Trades" >
                    <Image  Source="/Images/Touch.png" />
                </Button>
                <Button Height="24" Click="DividendsButton_Click" Margin="1,0,1,0" ToolTip="Dividends" >
                    <Image  Source="/Images/Dividends.png" />
                </Button>
                <Button Height="24" Click="JournalButton_Click" Margin="1,0,1,0" ToolTip="Journal" >
                    <Image  Source="/Images/Edit.png" />
                </Button>
                <Button Height="24" Click="AlertsButton_Click" Margin="1,0,1,0" ToolTip="Alerts" >
                    <Image  Source="/Images/Fishing net.png" />
                </Button>
                <Button Height="24" Click="OptimiseButton_Click" Margin="1,0,1,0" ToolTip="Optimise" >
                    <Image  Source="/Images/Optimise.png" />
                </Button>
                <Button Height="24" Click="CalibrateButton_Click" Margin="1,0,1,0" ToolTip="Calibrate candles" >
                    <Image  Source="/Images/Candlestick.png" />
                </Button>
                <Button Height="24" Name="Documentation" Margin="1,0,1,0" ToolTip="Documentation" >
                    <Image  Source="/Images/Book.png" />
                </Button>
            </ToolBar>
        </ToolBarTray>
        <Grid Grid.Row="2"  HorizontalAlignment="Stretch" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="945*"/>
            </Grid.ColumnDefinitions>

            <TreeView Name="TreeView" SelectedItemChanged="TreeView_SelectedItemChanged" Loaded="TreeView_Loaded" BorderBrush="Transparent" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Top"  Width="Auto"  Grid.Row="0" Grid.Column="0" />

            <GridSplitter Height="Auto" Width="5" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="1" ResizeDirection="Columns"></GridSplitter>

            <TabControl Name="Library" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Grid.Row="0" Grid.Column="2"  Height="Auto" VerticalAlignment="Stretch" Width="Auto" VerticalContentAlignment="Stretch" >
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </TabControl.Resources>
            </TabControl>

        </Grid>
    </Grid>
</Window>
