<Window x:Class="OpenTrader.Windows.DataFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenTrader.Windows"
        mc:Ignorable="d"
        Title="Data File" Height="445" Width="500" ResizeMode="NoResize">
    <StackPanel>
        <ToolBar Height="30" Margin="0,0,0,1" >
            <Button Height="24" Click="Save_Click" ToolTip="Save">
                <Image  Source="pack://application:,,,/OpenTrader;component/Images/Save.png" />
            </Button>
            <Button Height="24" Click="Cancel_Click" ToolTip="Cancel">
                <Image  Source="pack://application:,,,/OpenTrader;component/Images/Cancel.png" />
            </Button>
        </ToolBar>
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" >
            <StackPanel Orientation="Vertical" >
                <Image Name="Image" HorizontalAlignment="Left" Height="75" Width="75" Margin="5,5,10,10"/>

                    <StackPanel Orientation="Horizontal" Height="30"  Margin="0,5,0,10">
                        <Label Width="100">Data Set</Label>
                        <ComboBox Name="DataSetCombo" Width="140" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Height="30"  Margin="0,5,0,10">
                    <Label Width="100">Name</Label>
                    <TextBox Name="Name" Width="140"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="30"  Margin="0,0,0,10">
                    <Label Width="100">Yahoo Code</Label>
                    <TextBox Name="YahooCode" Width="140"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="30"  Margin="0,0,0,10">
                    <Label Width="100">Description</Label>
                    <TextBox Name="Description" Width="140"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="30"  Margin="0,0,0,10">
                    <Label Width="100">Start</Label>
                    <DatePicker Name="Start" Width="140"></DatePicker>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="30"  Margin="0,0,10,10">
                    <Label Width="99">Watching</Label>
                    <CheckBox Name="Watching" Margin="0,7,0,0"></CheckBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="30"  Margin="0,0,0,10">
                    <Label Width="100">Watch amount</Label>
                    <TextBox Name="WatchAmount" Width="140"></TextBox>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel Orientation="Vertical" Margin="0,0,5,0">
                <Label Height="Auto">Trading Notes</Label>
                <TextBox Name="TradingNotes" Margin="3,0,0,0" Height="345" TextWrapping="Wrap" AcceptsReturn="true"  VerticalScrollBarVisibility="Visible"></TextBox>
            </StackPanel>
        </Grid>
    </Grid>
    </StackPanel>
</Window>
