<Window x:Class="OpenTrader.Windows.DivendsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenTrader.Windows"
        mc:Ignorable="d"
        Title="Divends" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions />
        <ToolBar  DockPanel.Dock="Top" Height="30"  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <Button Height="24" Click="AddButton_Click" Margin="1,0,0,0" ToolTip="Add" >
                <Image  Source="/Images/Add.png" />
            </Button>
            <Button Height="24" Click="SaveButton_Click" Margin="1,0,0,0" ToolTip="Save" >
                <Image  Source="/Images/Save.png" />
            </Button>
            <Button Height="24"  Click="DeleteButton_Click" Margin="1,0,0,0" ToolTip="Delete" >
                <Image  Source="/Images/Delete.png" />
            </Button>
            <Button Height="24"  Click="DownloadButton_Click" Margin="1,0,0,0" ToolTip="Download historical" >
                <Image  Source="/Images/Download.png" />
            </Button>
        </ToolBar>
        <DataGrid Name="DividendGrid" Grid.Row="1"   Grid.Column="0" AlternatingRowBackground = "LightGray" AlternationCount = "2" PreviewKeyUp="DividendGrid_PreviewKeyUp" SelectionChanged="DividendGrid_SelectionChanged" AutoGenerateColumns="false" CellEditEnding="CellEditEnding">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Ex Dividend" Width="1*"  >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ExDividend, StringFormat=d/M/yyyy}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding ExDividend}"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Period" Binding="{Binding Period}" Width="1*"  ></DataGridTextColumn>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="1*" ></DataGridTextColumn>
                <DataGridTextColumn Header="Imputation" Binding="{Binding Imputation}"  Width="1*" ></DataGridTextColumn>
                <DataGridTemplateColumn Header="Payable" Width="1*"  >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Payable, StringFormat=d/M/yyyy}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Payable}"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
