<Window x:Class="OpenTrader.Windows.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenTrader.Windows"
        mc:Ignorable="d"
        Title="Preferences" Height="450" Width="800">
    <DockPanel VerticalAlignment="Stretch">
        <TabControl VerticalAlignment="Stretch">
            <TabItem Header="User">
                <StackPanel VerticalAlignment="Top" Margin="20,20,20,0">
                    <StackPanel Orientation="Horizontal">
                        <Label Width="100">User</Label>
                        <TextBox Name="OpenTraderUser" Width="200"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="100">Password</Label>
                        <PasswordBox Name="OpenTraderPassword" Width="200" PasswordChar="*"></PasswordBox>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Sharesies">
                <StackPanel VerticalAlignment="Top" Margin="20,20,20,0">
                    <StackPanel Orientation="Horizontal">
                        <Label Width="100">User</Label>
                        <TextBox Name="SharesiesUser" Width="200"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="100">Password</Label>
                        <PasswordBox Name="SharesiesPassword" Width="200" PasswordChar="*"></PasswordBox>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Chart">
                <StackPanel VerticalAlignment="Top" Margin="20,20,20,0">
                    <StackPanel Orientation="Horizontal">
                        <Label Width="100">Candle Width</Label>
                        <TextBox Width="200"></TextBox>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Advanced">
                <StackPanel VerticalAlignment="Top" Margin="20,20,20,0">
                    <StackPanel Orientation="Horizontal">
                        <Label Width="100">Strategy Folder</Label>
                        <TextBox Name="StrategyPath" Width="400"></TextBox>
                        <Button ToolTip="Select folder" Background="White" Click="StrategyPath_Click" BorderBrush="Transparent">
                            <Image Source="/Images/Folder.png" Height="24" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
