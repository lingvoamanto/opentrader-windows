<Window x:Class="OpenTrader.Windows.OpenFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenTrader.Windows"
        mc:Ignorable="d"
        Title="OpenFile" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Name="ScriptList" Margin="5,10,5,5" />
        <TextBox Grid.Row="1" Grid.Column="0"  Name="SearchText" Margin="5,5,10,10" />
        <Button Grid.Row="1" Grid.Column="1"  Name="OpenButton" Margin="5,5,5,10"  Click="OpenButton_Click" >Open</Button>
        <Button Grid.Row="1" Grid.Column="2"  Name="CloseButton" Margin="5,5,5,10" Click="CloseButton_Click">Close</Button>
    </Grid>
</Window>
